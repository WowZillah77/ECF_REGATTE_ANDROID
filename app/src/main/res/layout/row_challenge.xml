<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/challenge_nom_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/challenge_code_text_view"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.095" />

    <TextView
        android:id="@+id/du_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:text="du:"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/challenge_nom_text_view" />

    <TextView
        android:id="@+id/date_debut_text_view"
        android:layout_width="94dp"
        android:layout_height="19dp"
        android:text="TextView"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/challenge_nom_text_view"
        app:layout_constraintLeft_toRightOf="@+id/du_text_view"
        android:layout_marginLeft="42dp" />

    <TextView
        android:id="@+id/au_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="au:"
        android:layout_marginLeft="41dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/du_text_view" />

    <TextView
        android:id="@+id/date_fin_text_view"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintLeft_toRightOf="@+id/au_text_view"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/date_debut_text_view" />

    <TextView
        android:id="@+id/challenge_code_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="64dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>